
config samba
	option workgroup 'WORKGROUP'
	option homes '0'
	option autoshare '0'
	option name 'sfrt'
	option description 'sfrt'

config sambashare
	option auto '1'
	option name 'sda3'
	option path '/opt'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0777'
	option dir_mask '0777'
	option device 'sda3'
	option browseable 'yes'
	option users 'root'

